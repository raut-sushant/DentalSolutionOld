    private void btnSalvarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSalvarActionPerformed
        try{
            String nome  = txtNome.getText();
            String rg    = txtRG.getText();
            String cpf   = txtCPF.getText();
            String nasc  = txtNasc.getText();
            String end   = txtRua.getText();
            String num   = txtNumero.getText();
            String cid   = txtCidade.getText();
            String est   = txtEstado.getText();
            String tel   = txtTel.getText();
            String cel   = txtCel.getText();

            //Verificar se o CPF é valido
            //ValidaCPF cpf_func = new ValidaCPF();
            //boolean cpfValidado = cpf_func.ValidaCpf(cpf);

            //Verifica no banco de dados se já existe algum funcionario cadastrado com esse CPF
            String FuncionarioCPF = "SELECT * FROM funcionarios WHERE cpf_pac = '"+cpf+"'";
            con_func.QuerySQL(FuncionarioCPF);

            if(nome.length() < 3){
                JOptionPane.showMessageDialog(null,"Por favor, digite o seu nome!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(rg.equals("")){
                JOptionPane.showMessageDialog(null,"Por favor, digite o seu RG!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(rg.length() < 10){
                JOptionPane.showMessageDialog(null,"Por favor, digite o seu RG coretamente!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(cpf.equals("")){
                JOptionPane.showMessageDialog(null,"Por favor, digite o seu CPF!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            /*else if(cpfValidado = false){
                JOptionPane.showMessageDialog(null,"O número CPF digitado é invalido!","Atenção", JOptionPane.WARNING_MESSAGE);
            }**/
            else if(con_func.rs.next()){
                JOptionPane.showMessageDialog(null,"Já existe um funcionario cadastrado com esse CPF!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(nasc.equals("")){
                JOptionPane.showMessageDialog(null,"Por favor, digite o sua data de nascimento!","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(nasc.length() < 10){
                JOptionPane.showMessageDialog(null,"Por favor, digite a data de nascimento coretamente! \n Ex: 01/01/1990","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(tel.equals("")){
                JOptionPane.showMessageDialog(null,"Por favor, digite um telefone para contato","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else if(tel.length() < 14){
                JOptionPane.showMessageDialog(null,"Por favor, digite o telefone coretamente! \n Ex: (11) 2910-8055","Atenção", JOptionPane.WARNING_MESSAGE);
            }
            else{
                //Inseri os dados no banco
                String FuncionarioInsert = "INSERT INTO funcionarios () VALUES (NULL,'"+nome+"','"+rg+"','"+cpf+"','"+nasc+"','"+cbSexo.getSelectedItem()+"', NULL,'"+end+"','"+num+"','"+cid+"','"+est+"','"+tel+"','"+cel+"')";
                con_func.stmt.execute(FuncionarioInsert);
                JOptionPane.showMessageDialog(null,"Funcionario cadastrado com sucesso!","Cadastrado!", JOptionPane.INFORMATION_MESSAGE);
            }
        }
        catch(SQLException erroSQL){
             JOptionPane.showMessageDialog(null,"Não foi possível cadastrar o usuário!"+erroSQL, "Erro!", JOptionPane.ERROR_MESSAGE);
        }
}//GEN-LAST:event_btnSalvarActionPerformed

